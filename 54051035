import java.io.IOException;
import java.net.URL;
import java.net.URLConnection;
import java.util.List;
import java.util.Map;
import java.util.logging.Level;
import java.util.logging.Logger;
import javax.swing.JEditorPane;
import javax.swing.JTextField;
import javax.swing.JTextPane;

/*
 * To change this license header, choose License Headers in Project Properties.
 * To change this template file, choose Tools | Templates
 * and open the template in the editor.
 */

/**
 *
 * @author Tetetakkie
 */
public class Thread_1 extends Thread{
    private JTextField address_url;
    private JEditorPane show_display;
    private JTextPane show_text;
    private String Name_thread;

    public Thread_1(JTextField address_url1, JEditorPane show_display1, JTextPane show_text1, String Name_thread1) {
        this.address_url = address_url1;
        this.show_display = show_display1;
        this.show_text = show_text1;
        this.Name_thread = Name_thread1;
    }

    public Thread_1() {
    }

    @Override
    public void run() {
        super.run(); //To change body of generated methods, choose Tools | Templates.
        String status1 = null;
        status1 = "Thread " + Name_thread + "Start\n";
        try {
            //  setCursor(Cursor.getPredefinedCursor(Cursor.WAIT_CURSOR));
            show_display.setPage(address_url.getText());
            show_text.setText(status1);

            //
            URL url1 = new URL(address_url.getText());
            URLConnection conn = url1.openConnection();
            Map<String, List<String>> map = conn.getHeaderFields();

            status1 += "Printing Response Header...\n";

            for (Map.Entry<String, List<String>> entry : map.entrySet()) {
                status1 += entry.getKey() + ":" + entry.getValue() + "\n";
            }

            status1 += "\nGet Response Header By Key ...\n";
            String server = conn.getHeaderField("Server");

            if (server == null) {
                status1 += "Key 'Server' is not found!";
            } else {
                status1 += "Server - " + server;
            }
            status1 += "\n Done\n";

            show_text.setText(status1);

            //
        } catch (IOException ex) {
            Logger.getLogger(Thread_1.class.getName()).log(Level.SEVERE, null, ex);
        }
        status1 += "Thread " + Name_thread + "Stop\n";
        show_text.setText(status1);
    }
    
    
}

